<% include ../partials/header.ejs %>

<main class="container">

    <h1><%= title %></h1>

    <form method="post">
        <div class="form-group">
            <label for="Title" class="col-sm-2 control-label">Title: *</label>
            <input name="Title" id="Title" value="<%= ad.Title %>" required />
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Description: *</label>
            <input name="Description" id="Description" value="<%= ad.Description %>" required />
        </div>
        <div class="form-group">
            <label for="Price" class="col-sm-2 control-label">Price:</label>
            <input name="Price" id="Price" type="number" value="<%= ad.Price %>" required />
        </div>
        <button class="btn btn-success col-sm-offset-2">Save</button>
    </form>

</main>

<% include ../partials/footer.ejs %>
